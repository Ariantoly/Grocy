<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="48dp"
    android:background="@drawable/app_background"
    tools:context=".ForgotPasswordOtpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginBottom="44dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will send you OTP to your email for confirmation"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginBottom="44dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_otp1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/rounded_square_background"/>

        <EditText
            android:id="@+id/et_otp2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/rounded_square_background"/>

        <EditText
            android:id="@+id/et_otp3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/rounded_square_background"/>

        <EditText
            android:id="@+id/et_otp4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/rounded_square_background"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_background_dark"
        android:onClick="doConfirm"/>

</LinearLayout>